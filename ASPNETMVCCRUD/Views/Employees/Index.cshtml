@model List<ASPNETMVCCRUD.Models.Domain.Employee>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Birthday</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary.ToString("#,###.00")</td>
                <td>@employee.Birthday.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td>
                    <!--
                        <a href="Employees/View/@employee.Id">View</a>
                    -->
                     @Html.ActionLink("View", "View", "Employees", new {id = employee.Id})
                    @Html.ActionLink("Delete", "Delete", "Employees", new {id = employee.Id})
                </td>

            </tr>
        }
    </tbody>
    <tr>
    </tr>
</table>